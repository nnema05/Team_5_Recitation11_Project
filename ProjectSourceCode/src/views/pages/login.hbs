<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Style Swipe Login</title>
  <!-- Importing the "Bungee Shade" font -->
  <link href="https://fonts.googleapis.com/css2?family=Bungee+Shade&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #ffe6f2; /* Light pink background */
      margin: 0;
      padding: 0;
    }

    .container {
      max-width: 800px;
      margin: 20px auto;
      background-color: #ffffff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h1, h2 {
      color: #333333;
      text-align: center;
    }

    /* Gradient text for "style swipe" with updated swipe animations */
    .gradient-text {
      font-size: 60px; /* Increase font size for big text */
      background: linear-gradient(to right, #ff69b4, #ff1493); /* Pink gradient */
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      /* Apply the blocky font */
      font-family: 'Bungee Shade', cursive;
      margin-bottom: 20px;
      /* Updated animation properties */
      animation: swipeCycle 7s linear infinite;
    }

    /* Updated keyframes for the swipe in and swipe out cycle */
    @keyframes swipeCycle {
      0% {
        transform: translateX(-100%);
        opacity: 0;
      }
      14.29% {
        transform: translateX(0);
        opacity: 1;
      }
      85.71% {
        transform: translateX(0);
        opacity: 1;
      }
      92.86% {
        transform: translateX(100%);
        opacity: 0;
      }
      100% {
        transform: translateX(100%);
        opacity: 0;
      }
    }

    label {
      font-size: 16px;
      color: #555555;
    }

    .form-control {
      font-size: 14px;
      padding: 10px;
      margin-top: 5px;
      width: 100%;
      box-sizing: border-box;
    }

    .btn {
      display: inline-block;
      padding: 10px 20px;
      margin: 10px 0;
      color: #ffffff;
      background-color: #ff00c3; /* Bright pink button */
      text-decoration: none;
      border-radius: 4px;
      font-size: 16px;
      text-align: center;
      transition: background-color 0.3s ease;
      border: none;
      cursor: pointer;
    }

    .btn:hover {
      background-color: #de0fa7; /* Slightly darker pink on hover */
    }

    .text-center a {
      color: #ff00c3; /* Pink hyperlinks */
      text-decoration: none;
      transition: color 0.3s ease;
    }

    .text-center a:hover {
      color: #de0fa7; /* Darker pink on hover */
    }

    .mt-3 {
      margin-top: 1rem;
    }

    .mt-4 {
      margin-top: 1.5rem;
    }

    .mt-5 {
      margin-top: 2rem;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <!-- "style swipe" Heading with Gradient, Animation, and Blocky Font -->
    <h1 class="gradient-text">style swipe</h1>

    <h2 class="text-center">Login</h2>
    
    {{> message }}

    <!-- Login Form -->
    <form action="/login" method="POST">
      
      <!-- Username Field -->
      <div class="form-group mt-3">
        <label for="username">Username</label>
        <input type="text" class="form-control" id="username" name="username" placeholder="Enter username" required>
      </div>
      
      <!-- Password Field -->
      <div class="form-group mt-3">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" required>
      </div>
      
      <!-- Submit Button -->
      <div class="text-center mt-4">
        <button type="submit" class="btn">Login</button>
      </div>
      
    </form>

    <!-- Optional: Link to Registration Page and Reset Password -->
    <div class="text-center mt-3">
      <p>Don't have an account? <a href="/register">Register here</a>.</p>
      <p><a href="/reset-password">Forgot your password?</a></p>
    </div>
  </div>
</body>
</html>
