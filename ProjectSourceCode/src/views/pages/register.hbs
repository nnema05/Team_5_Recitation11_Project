<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #ffe6f2; /* Light pink background */
    margin: 0;
    padding: 0;
  }
  .container {
    max-width: 800px;
    margin: 20px auto;
    background-color: #ffffff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
  h2 {
    color: #333333;
    text-align: center;
  }
  label {
    font-size: 16px;
    color: #555555;
  }
  .form-control {
    font-size: 14px;
    padding: 10px;
    margin-top: 5px;
  }
  .btn {
    display: inline-block;
    padding: 10px 20px;
    margin: 10px 0;
    color: #ffffff;
    background-color: #ff00c3; /* Bright pink button */
    text-decoration: none;
    border-radius: 4px;
    font-size: 16px;
    text-align: center;
    transition: background-color 0.3s ease;
  }
  .btn:hover {
    background-color: #de0fa7; /* Slightly darker pink on hover */
  }
  .text-center a {
    color: #ff00c3; /* Pink hyperlinks */
    text-decoration: none;
    transition: color 0.3s ease;
  }
  .text-center a:hover {
    color: #de0fa7; /* Darker pink on hover */
  }
</style>

  <div class="container mt-5">
  <h2 class="text-center">Register</h2>
  
  <!-- Display error message if user already exists -->
  {{#if error}}
    <div class="alert alert-danger mt-3">
      {{error}}
    </div>
  {{/if}}

  <!-- Registration Form -->
  <form action="/register" method="POST">
    
    <!-- Username Field -->
    <div class="form-group mt-3">
      <label for="username">Username</label>
      <input type="text" class="form-control" id="username" name="username" placeholder="Enter username" required>
    </div>
    
    <!-- Password Field -->
    <div class="form-group mt-3">
      <label for="password">Password</label>
      <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" required>
    </div>
    
    <!-- Submit Button -->
    <div class="text-center mt-4">
      <button type="submit" class="btn btn-primary">Register</button>
    </div>
  
  </form>

  <!-- Optional: Link to Login Page -->
  <div class="text-center mt-3">
    <p>Already have an account? <a href="/login">Login here</a>.</p>
  </div>
</div>
