<style>
  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #ff66b2; /* Black background to highlight stars */
    margin: 0;
    padding: 0;
    overflow: hidden; /* Prevent scrollbars */
  }

  /* Shooting stars */
  .star {
    position: absolute;
    top: -10px;
    width: 4px;
    height: 160px;
    background: linear-gradient(45deg, rgba(255,255,255,1), rgba(255,255,255,0));
    opacity: 0.8;
    transform: rotate(45deg);
    animation: shootingStar 5s linear infinite;
  }

  @keyframes shootingStar {
    0% {
      transform: translateX(0) translateY(0) rotate(45deg);
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    100% {
      transform: translateX(-500px) translateY(500px) rotate(45deg);
      opacity: 0;
    }
  }

  /* Create multiple stars with different delays and positions */
  /* Increased number of stars for continuous effect */
  .star:nth-child(1) { animation-delay: 0s; left: 10%; }
  .star:nth-child(2) { animation-delay: 1s; left: 20%; }
  .star:nth-child(3) { animation-delay: 2s; left: 30%; }
  .star:nth-child(4) { animation-delay: 3s; left: 40%; }
  .star:nth-child(5) { animation-delay: 4s; left: 50%; }
  .star:nth-child(6) { animation-delay: 5s; left: 60%; }
  .star:nth-child(7) { animation-delay: 6s; left: 70%; }
  .star:nth-child(8) { animation-delay: 7s; left: 80%; }
  .star:nth-child(9) { animation-delay: 8s; left: 90%; }
  .star:nth-child(10) { animation-delay: 9s; left: 25%; }

  .profile-container {
    max-width: 800px;
    margin: 40px auto;
    background-color: #ffffff; /* Profile code is white */
    padding: 40px;
    border-radius: 15px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    position: relative;
    z-index: 1; /* Ensure it's above the stars */
  }
  .profile-container h1, .profile-container h2 {
    color: #ff66b2;
    text-align: center;
    position: relative;
    z-index: 1;
  }
  /* Add star emojis before and after the headings */
  .profile-container h1::before,
  .profile-container h1::after,
  .profile-container h2::before,
  .profile-container h2::after {
    content: "‚≠ê";
    margin: 0 5px;
  }
  .profile-details {
    text-align: center;
    margin-bottom: 30px;
    position: relative;
    z-index: 1;
  }
  .profile-details p {
    font-size: 18px;
    color: #ff66b2;
  }
  .btn {
    display: inline-block;
    padding: 12px 25px;
    margin: 10px 0;
    color: #ffffff;
    background: linear-gradient(45deg, #ff99cc, #ff66b2);
    text-decoration: none;
    border-radius: 30px;
    font-size: 16px;
    text-align: center;
    transition: background 0.3s ease;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    position: relative;
    overflow: hidden;
    z-index: 1;
  }
  .btn:hover {
    background: linear-gradient(45deg, #ff80bf, #ff4da6);
  }
  .btn::after {
    content: '';
    position: absolute;
    left: -50%;
    top: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle at center, rgba(255, 102, 178, 0.2), transparent 70%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  .btn:hover::after {
    opacity: 1;
  }
  .closet-preview, .discover-section {
    text-align: center;
    margin-bottom: 30px;
    position: relative;
    z-index: 1;
  }
  .closet-preview p, .discover-section p {
    font-size: 16px;
    color: #ff66b2;
  }
</style>

<body>
  <!-- Shooting Stars -->
  <div class="star"></div>
  <div class="star"></div>
  <div class="star"></div>
  <div class="star"></div>
  <div class="star"></div>
  <div class="star"></div>
  <div class="star"></div>
  <div class="star"></div>
  <div class="star"></div>
  <div class="star"></div>

  <div class="profile-container">
    <h1> {{username}}'s Profile </h1>
  
    <div class="profile-details">
      <p><strong>Username:</strong> {{username}}</p>
    </div>
  
    <h2> Closet </h2>
    <div class="closet-preview">
      <p>View items in your closet:</p>
      <a href="/mycloset" class="btn">Go to My Closet</a>
    </div>
  
    <h2> Discover New Items </h2>
    <div class="discover-section">
      <p>Browse new items available:</p>
      <a href="/discover" class="btn">Discover</a>
    </div>
  </div>
  
</body>
