{{!-- Include the header --}}
{{> header}}

<div class="profile-container">
    <h1>{{user.name}}'s Profile</h1>

    <div class="profile-details">
        <p><strong>Email:</strong> {{user.email}}</p>
        <p><strong>Username:</strong> {{user.username}}</p>
        <p><strong>Joined:</strong> {{user.joinDate}}</p>
    </div>

    <h2>Closet</h2>
    <div class="closet-preview">
        <p>View items in your closet:</p>
        <a href="/mycloset" class="btn">Go to My Closet</a>
    </div>

    <h2>Discover New Items</h2>
    <div class="discover-section">
        <p>Browse new items available:</p>
        <a href="/discover" class="btn">Discover</a>
    </div>
</div>
{{!-- Include the footer --}}
{{> footer}}
